				    <string>*_IR_108_09*</string>
				  </entry>
				  <entry>
				    <string>Channel_09_STYLE</string>
				    <string>raster</string>
				  </entry>
				  <entry>
				    <string>Channel_09_MOSAIC_DIR</string>
				    <string>/opt/data/msg1/MSG1_Channel_09</string>
				  </entry>
				  
